<div class="cart_title">Nákupní košík</div>
	
<table>
	<%= render(cart.line_items) %>
	
	<tr class="total_line">
		<td colspan="2">Spolu:</td>
		<td class="total_cell">
			<%= number_to_currency cart.total_price, :locale => :cs %>
		</td>
	</tr>
</table>

<%= button_to 'Vyprázdniť košík', cart, :method => :delete, :confirm => 'Naozaj vyprázdniť?' %>